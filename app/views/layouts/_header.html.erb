<header class = "navbar navbar-fixed-top navbar-inverse">
  <div class = "container">
    <%= link_to t("english"), locale: :en %>
    <%= link_to t("vietnamese"), locale: :vi %>
    <%= link_to "sample app", "#", id: "my-logo" %>
    <nav>
      <ul class = "nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></li>
        <li><%= link_to t("help"), "#" %></li>
        <% if logged_in? %>
          <li><%= link_to t("user"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle",
            "data-toggle": "dropdown", id: "account" do %>
              <%= t "account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("log_out"), logout_path,
              data: {turbo_method: :delete} %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
